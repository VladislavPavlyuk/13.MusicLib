@model MusicLib.BLL.DTO.AudioDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Details"];
    ViewData["Title"] = Localizer["Details"];
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<h2>@Localizer["Audio"]</h2>

<div>
    <audio src="@Html.DisplayFor(model => model.Path)" class="object-fit-contain" controls></audio>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

