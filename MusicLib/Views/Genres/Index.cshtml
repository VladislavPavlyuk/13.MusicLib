@model IEnumerable<MusicLib.BLL.DTO.GenreDTO> 
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Index"];
    ViewData["Title"] = Localizer["Index"];
}

<h2>@Localizer["List of Genres"]</h2>
<p>
    <a asp-action="Create">@Localizer["Add a new Genre"]</a>
</p>
<table class="table-condensed" style="width:100%">
    <tr>
        <th>
            @Html.Label(Localizer["Genre"].ToString())
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
            </td>
        </tr>
    }
</table>