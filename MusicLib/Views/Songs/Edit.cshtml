@model MusicLib.BLL.DTO.SongDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Edit"];
    ViewData["Title"] = Localizer["Edit"];
}

<h2>@Localizer["Edit Song"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                @Html.Label(Localizer["Song:"].ToString())
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label(Localizer["Release:"].ToString())
                <input asp-for="Release" class="form-control" />
                <span asp-validation-for="Release" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label(Localizer["Youtube Link:"].ToString())
                <input asp-for="YoutubeLink" class="form-control" />
                <span asp-validation-for="YoutubeLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label(Localizer["Genre:"].ToString())
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.ListGenres as SelectList"></select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label(Localizer["Artist:"].ToString())
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ListArtists as SelectList"></select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label(Localizer["File:"].ToString())
                <select asp-for="AudioId" class="form-control" asp-items="ViewBag.ListAudios as SelectList"></select>
                <span asp-validation-for="AudioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink(Localizer["Back"].ToString(), "Index")
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
