@model MusicLib.BLL.DTO.SongDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Delete"];
    ViewData["Title"] = Localizer["Delete"];
}

<h2>@Localizer["Delete Song"]</h2>

<h3>@Localizer["Do you really want to delete this Song?"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             @Html.Label("Song:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Release:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Release)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("Genre:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Artist:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("Audio:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Audio)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back"]</a>
    </form>
</div>

